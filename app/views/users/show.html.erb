<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div>
  <h3>Attended events: </h3>
    <h4>Past</h4>
    <hr>
    <% @past_attended_events.each do |event| %>
      <h5><%= link_to event.name, event_path(event.id) %></h5>
      <p>Created by: <%= event.creator.name %> </p>
      <p>Date: <%= event.date %></p>
      <p>Location: <%= event.location %></p>
      <p><%= event.description unless event.description.nil? %></p><br>
    <% end %>

    <h4>Upcoming</h4>
    <hr>
    <% @upcoming_attended_events.each do |event| %>
      <h5><%= link_to event.name, event_path(event.id) %></h5>
      <p>Created by: <%= event.creator.name %> </p>
      <p>Date: <%= event.date %></p>
      <p>Location: <%= event.location %></p>
      <p><%= event.description unless event.description.nil? %></p><br>
    <% end %>

</div>
<div>
  <h3>Created events: </h3>
    <h4>Past</h4>
    <hr>
    <% @past_created_events.each do |event| %>
      <h5><%= link_to event.name, event_path(event.id) %></h5>
      <p>Created by: <%= event.creator.name %> </p>
      <p>Date: <%= event.date %></p>
      <p>Location: <%= event.location %></p>
      <p><%= event.description unless event.description.nil? %></p><br>
    <% end %>

    <h4>Upcoming</h4>
    <hr>
    <% @upcoming_created_events.each do |event| %>
      <h5><%= link_to event.name, event_path(event.id) %></h5>
      <p>Created by: <%= event.creator.name %> </p>
      <p>Date: <%= event.date %></p>
      <p>Location: <%= event.location %></p>
      <p><%= event.description unless event.description.nil? %></p><br>
    <% end %>
</div>
